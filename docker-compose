version: "3.8"
services:
  website:
    image: nginx:latest
    container_name: nginx
    ports:
      - 80:80
  app:
    image: tomcat:10
    container_name: tomcat
    ports:
      - 8080:8080
  mysql:
    image: mysql:5.7
    container_name: mysql
    ports:
      - 3306:3306
    environment:
      - MYSQL_ROOT_PASSWORD=${DB_PASSWORD}
      - MYSQL_USERNAME=${DB_USER}
      - MYSQL_DATABASE=${DB_NAME}
    volumes:
      - mysql-db:/var/lib/mysql

volumes:
  mysql-db:
